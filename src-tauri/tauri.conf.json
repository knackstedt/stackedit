{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build:tauri",
        "beforeDevCommand": "npm run dev:tauri",
        "devPath": "http://localhost:8081",
        "distDir": "../dist/stackedit",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "stackedit",
        "version": "../src/package.json"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "all": true,
                "scope": [
                    "$APPDATA/**/*",
                    "$USER/**/*"
                ]
            },
            "clipboard": {
                "all": true
            },
            "dialog": {
                "all": true
            },
            "window": {
                "setAlwaysOnTop": true,
                "setTitle": true,
                "show": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "dev.dotglitch.stackedit",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://github.com/knackstedt/stackedit/releases/latest/download/latest.json"
            ],
            "dialog": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZGM0Y2NDkwMUExMjdBNjUKUldSbGVoSWFrR1EvLzM2dVdYRGJ4aHRQb3drcEp1clppcXRVcVFZdE1aSDh6WVlHajhrUWE2VTgK"
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 820,
                "resizable": true,
                "title": "stackedit",
                "width": 1460
            }
        ]
    }
}
