{
  "name": "stackedit",
  "version": "0.0.0",
  "description": "Free, open-source, full-featured Markdown editor",
  "author": {
    "name": "Andrew Knackstedt",
    "email": "andrewk@vivaldi.net"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/knackstedt/stackedit/issues"
  },
  "main": "main.js",
  "scripts": {
    "dev": "ng serve --port 4400 --ssl",
    "dev:electron": "electron electron/main.js",
    "dev:http": "ng serve --port 8081",
    "dev:package": "ng build package --watch --configuration development",
    "versionset": "cd src && sed -i -e \"s/__VERSION__/$(npm version --json | jq \".[\\\"ngx-stackedit\\\"]\" | tr -d '\"')/g\" ./app/editor/editor.component.ts",
    "build": "ng build --project package",
    "build:app": "ng build --project dotglitch",
    "prebuild:electron": "ng build --project dotglitch",
    "build:electron": "electron-builder"
  },
  "dependencies": {
