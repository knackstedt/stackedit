    "filerobot-image-editor": "^4.8.1",
    "json5": "^2.2.3",
    "localforage": "^1.10.0",
    "markdown-it": "^13.0.2",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-deflist": "^2.1.0",
